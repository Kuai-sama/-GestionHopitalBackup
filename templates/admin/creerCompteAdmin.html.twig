{% extends 'base.html.twig' %}
{% block body %}
<body>
<form method="post">
    <section class="vh-100 gradient-custom">
                            <h2 class="fw-bold mb-2 text-uppercase">Création de compte</h2>
                            <div>
                                {{ form_start(form) }}
                                <div>
                                    <a>Role</a></br>
                                    {{form_widget(form.roles)}}
                                </div>
                                <div>
                                    <a>Nom</a></br>
                                    {{form_widget(form.Nom)}}
                                </div>
                                <br>
                                <div>
                                    <a>Prénom</a></br>
                                    {{form_widget(form.Prenom)}}
                                </div>
                                <br>
                                <div>
                                    <a>Numéro adeli</a></br>
                                    {{form_widget(form.NumAdeli)}}
                                </div>
                                <br>
                                <div>
                                    <a>Mot de passe</a></br>
                                    {{form_widget(form.password)}}
                                </div>
                                <br>
                                <div>
                                    <a>Email</a></br>
                                    {{form_widget(form.Email)}}
                                </div>
                                <br>
                                <div>
                                    <a>Téléphone</a></br>
                                    {{ form_errors(form.NumTel) }}
                                    {{form_widget(form.NumTel)}}
                                </div>
                                <br>
                                {{ form_end(form) }}
                            </div>
    </section>
</form>
</body>
{% endblock %}