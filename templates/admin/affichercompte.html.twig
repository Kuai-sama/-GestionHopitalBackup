{% extends 'base.html.twig' %}
{% block body %}

    {% for message in app.flashes('info') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('delete') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}


    <h1>Medecin</h1>
    <table class="table table-striped" style="table-layout: auto;
width: 100%;">
        <thead class="thead-dark">
        <tr>
            <th scope="col"> Nom </th>
            <th scope="col"> Prenom </th>
            <th scope="col"> Email </th>
            <th scope="col">  </th>
            <th scope="col">  </th>
        </tr>
        </thead>
        {% for medecin in medecins %}
            <tr>
                <td> {{medecin.Nom}} </td>
                <td> {{medecin.Prenom}} </td>
                <td> {{medecin.EMail}} </td>
                <td>
                    <a href="{{path('app_admin_modifier_compte',{'id': medecin.id})}}"><input type='button' class="btn btn-warning" value="Modifier"/></a>
                </td>
                <td>
                    <a href="{{path('app_admin_valide_delete_compte',{'id': medecin.id})}}"><input type='button' class="btn btn-danger" value="Supprimer"/></a>
                </td>
            </tr>
