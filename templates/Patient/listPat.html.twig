{% extends 'base.html.twig' %}

{% block titre %}
	<title>
		{{'Visualisation des lits'}}
	</title>
{% endblock %}

{% set strNumLit, strPosLit, strOccLit = "Numéro", "Emplacement", "Occupation" %}

{% block body %}

		<style>
        th{
            text-align: center;
            background:  #47d147;
            color:white;
            font-size: 18px;
        }
        td{
            text-align: center;
        }
		a{
			list-style-type: none;  
			display: inline;
		}
		button{
			border: 2px solid #008000;
			border-radius: 12px;
		}
		button:hover{
			background:#00b300;
			color:white;
		}
    </style>

		<table class="table table-striped table-hover">
			<tr>
				<th scope="col">nom</th>
				<th scope="col">prenom</th>
				<th scope="col">numero de securité social</th>
				<th scope="col">email</th>
				<th scope="col">numero telephone</th>
				<th scope="col">Dossier Patient</th>
			</tr>
			{% for patient in patients %}
				<tr>
					<td>{{ patient.Personne.nom }}</td>
					<td>{{ patient.Personne.prenom }}</td>
					<td>{{ patient.Personne.NumSecuriteSociale }}</td>
					<td>{{ patient.Personne.email }}</td>
					<td>{{ patient.Personne.NumTel }}</td>
					<td><a href={{ path("app_dossier_patient",{"idpatient": patient.id}) }}><button>acceder au dossier du patient</button></a></td>
				</tr>
			{% endfor %}
		</table>

{% endblock %}
